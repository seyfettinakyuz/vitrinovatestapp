<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seyfettin.vitrinovaapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.seyfettin.vitrinovaapplication.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VitrinovaApplication">
        <activity android:name="com.seyfettin.vitrinovaapplication.view.activity.AllItemsActivity"/>
        <activity
            android:name="com.seyfettin.vitrinovaapplication.view.activity.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@style/MainTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>